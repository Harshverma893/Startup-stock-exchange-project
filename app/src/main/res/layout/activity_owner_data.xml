<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui"
    tools:context=".OwnerData">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="StartUp Stock Exchange"
        android:textColor="#FFFEFE"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:backgroundTint="@color/purple_200"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Welcomes you"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="223dp"
        android:layout_height="62dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Founder!!"
        android:textColor="@color/white"
        android:textSize="48dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.846" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="391dp"
        android:layout_height="365dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.598">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textSize="24dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="15dp"></Space>

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:hint="Age"
                android:inputType="number"
                android:textSize="24dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="15dp"></Space>


            <EditText
                android:id="@+id/aadhar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:hint="Aadhaar Number"
                android:inputType="number"
                android:textSize="24dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="15dp"></Space>


            <EditText
                android:id="@+id/Pan"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:hint="Pan Number"
                android:inputType="textPersonName"
                android:textSize="24dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="15dp"></Space>


            <EditText
                android:id="@+id/BankAccount"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:hint="Bank Account Number"
                android:inputType="number"
                android:textSize="24dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="15dp"></Space>

            <EditText
                android:id="@+id/ifsc"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:hint="Bank IFSC Number"
                android:inputType="textPersonName"
                android:textSize="24dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:fontFamily="@font/roboto"
        android:text="Save"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

</androidx.constraintlayout.widget.ConstraintLayout>